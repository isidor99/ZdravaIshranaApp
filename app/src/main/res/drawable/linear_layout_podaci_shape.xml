<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding android:top="0dp" android:right="0dp" android:bottom="2dp" android:left="0dp" />
            <solid android:color="#50CCCCCC" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />
        </shape>
    </item>
    
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/linear_layout_podaci_background" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tabed_activity_background">

    <ImageView
        android:id="@+id/image_view_proizvodi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/text_view_proizvodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:textStyle="italic"
            android:textAlignment="textStart"
            android:padding="2dp"
            android:layout_toEndOf="@id/image_view_proizvodi"
            android:layout_alignTop="@id/image_view_proizvodi"/>

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tabed_activity_background_transparent"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/image_view_prodavnice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        />

    <TextView
        android:id="@+id/text_view_prodavnice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ime prodavnice"
        android:textSize="24dp"
        android:textStyle="italic"
        android:layout_alignTop="@id/image_view_prodavnice"
        android:layout_toRightOf="@id/image_view_prodavnice"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        />

    <TextView
        android:id="@+id/text_view_prodavnice_adresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresa prodavnice"
        android:textSize="16dp"
        android:textStyle="normal"
        android:layout_alignStart="@id/text_view_prodavnice"
        android:layout_below="@id/text_view_prodavnice"
        android:layout_marginTop="5dp"/>

</RelativeLayout>